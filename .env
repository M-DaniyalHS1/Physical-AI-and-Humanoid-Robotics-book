# Application
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ai_textbook

# JWT
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production

# Rate Limiting (format: X/period where X is number and period is second/minute/hour)
CHAT_RATE_LIMIT=10/minute
TRANSLATION_RATE_LIMIT=50/minute
CONTENT_RATE_LIMIT=100/minute

# External Service URLs
QDRANT_URL=https://your-cluster-url.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Redis (optional, for rate limiting and caching in production)
REDIS_URL=redis://localhost:6379